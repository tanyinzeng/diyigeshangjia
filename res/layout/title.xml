<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dz_top_bg_08"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/title_back"
        style="@style/TitleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="@dimen/Larger_text_size"
        android:background="@drawable/title_btn_back"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/title_text"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />
    </LinearLayout>

   <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
       >
       <Button
        android:id="@+id/title_save"
        style="@style/TitleButton"
        android:textSize="@dimen/Larger_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_btn_save"
        android:visibility="invisible" />
       <Button 
           android:id="@+id/user_deal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/guest_noti"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           />
   </RelativeLayout>
    

</RelativeLayout>